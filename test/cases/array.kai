
#test "constant declaration from array literal" {
    arr :: [3]u8{1, 2, 3}

    assert(arr[0] == 1)
    assert(arr[1] == 2)
    assert(arr[2] == 3)
}

#test "variable declaration from array literal" {
    arr := [3]u8{1, 2, 3}

    assert(arr[0] == 1)
    assert(arr[1] == 2)
    assert(arr[2] == 3)
}
