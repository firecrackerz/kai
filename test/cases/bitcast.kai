
/* // github.com/kai-language/issues/116
#test "bitcast to struct" {
    A :: struct {
        a: rawptr
    }
    x : rawptr = nil
    a := bitcast(A) x
} */

#test "bitcast stack variable to integer" {
    base: struct{}
    a := 0xC0FEBABE
    b := bitcast(rawptr) a
    assert(b == bitcast(rawptr) &base)
}

#test "bitcast cast from struct to integer" {
    Foo :: struct { a: u64 }

    foo := Foo{a: 7}
    assert(bitcast(u64) foo == 7)

    Bar :: struct { a, b: u32 }

    bar := Bar{a: 7, b: 7}
    assert(sizeof(Bar) == 64)
    assert(bitcast(u64) bar == 0x700000007)
}
